@page
@model LogicalProgramming.Pages.TaskPages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/AdminLTE/_Layout.cshtml";
}

<h1>Задачи по логическому программированию</h1>

<p>
    <a asp-page="Create">Добавить задачу</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LogicalTask[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogicalTask[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogicalTask[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogicalTask[0].CategoryNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LogicalTask) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Content)*@
                @Html.Raw(item.Content)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryNavigation.CategoryName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Открыть</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
